{
  "kind": "collectionType",
  "collectionName": "quizzes",
  "info": {
    "name": "Quiz",
    "description": "Quiz collection with questions and answers"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "typescript",
        "solidity",
        "docker",
        "javascript",
        "react",
        "nodejs"
      ],
      "required": true
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "beginner",
        "intermediate",
        "advanced"
      ],
      "default": "beginner"
    },
    "questions": {
      "type": "component",
      "repeatable": true,
      "component": "quiz.question"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "tags": {
      "type": "json"
    }
  }
}
